{
  "compileOnSave": true,
  "compilerOptions": {
    "skipLibCheck": true,
    "module": "CommonJS",
    "lib": [
      "ESNext"
    ],
    "resolveJsonModule": true,
    "target": "ES6",
    "esModuleInterop": true,
    "declaration": true,
    "declarationMap": true,
    "declarationDir": "./dec",
    "rootDir": "./src",
    "outDir": "./lib"
  },
  "include": [
    "./src"
  ],
  "exclude": [
    "./src/__tests__",
    "./src/scripts"
  ]
}